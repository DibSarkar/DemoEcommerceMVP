<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ececec"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_myprofile"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:id="@+id/cv_my_acc"
        card_view:cardUseCompatPadding="false"

        android:layout_marginBottom="5dp"

        app:cardCornerRadius="0dp"

        card_view:cardPreventCornerOverlap="false"


        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:text="Edit Account"
            android:id="@+id/tv_edit_acc"
            android:drawablePadding="20dp"
            android:textSize="16dp"
            android:textAlignment="center"
            android:gravity="center"
            android:drawableLeft="@drawable/edit"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/grey_color1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:text="Address Book"
            android:drawablePadding="20dp"
            android:id="@+id/tv_address_book"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="16dp"
            android:drawableLeft="@drawable/address_book"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/grey_color1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:text="My Wishlist"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/my_wishlist"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content" />



        </LinearLayout>


    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:id="@+id/rl_my_orders"

        android:layout_width="match_parent"

        android:layout_below="@+id/cv_my_acc"
        android:background="@color/category_bg"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_deals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnMoreDeals"
            android:text="My Orders"
            android:textColor="@color/category_text_color"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"/>


    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:id="@+id/cv_my_order"
        android:layout_below="@+id/rl_my_orders"
        card_view:cardUseCompatPadding="false"


        android:layout_marginBottom="5dp"

        app:cardCornerRadius="0dp"

        card_view:cardPreventCornerOverlap="false"


        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:text="Order History"
                android:drawablePadding="20dp"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"
                android:drawableLeft="@drawable/order_history"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/grey_color1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:text="Reward Points"
                android:drawablePadding="20dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16dp"
                android:drawableLeft="@drawable/rewards"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/grey_color1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:text="Returns"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/returns"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content" />



        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>