<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ececec"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_addressbook"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"



        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:id="@+id/cv_my_order"
                card_view:cardBackgroundColor="@color/coupon_bg"
                card_view:cardUseCompatPadding="false"
                android:layout_marginTop="15dp"

                android:layout_marginBottom="15dp"

                app:cardCornerRadius="0dp"

                card_view:cardPreventCornerOverlap="false"


                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingTop="10dp"
                   android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="30dp"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="100dp"
                            android:text="*First Name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"

                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:hint="Enter"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:textColorHint="#000"
                            android:paddingRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/estimate_round"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="100dp"
                            android:text="*Last Name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"

                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:hint="Enter"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:textColorHint="#000"
                            android:paddingRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/estimate_round"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="100dp"
                            android:text="Company"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"

                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:hint="Enter"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:textColorHint="#000"
                            android:paddingRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/estimate_round"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="100dp"
                            android:text="GSTIN Number"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"

                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:hint="Enter"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:textColorHint="#000"
                            android:paddingRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/estimate_round"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="100dp"
                            android:text="*Address 1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"

                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:hint="Enter"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:textColorHint="#000"
                            android:paddingRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/estimate_round"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="100dp"
                            android:text="*Address 2"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"

                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:hint="Enter"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:textColorHint="#000"
                            android:paddingRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/estimate_round"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="100dp"
                            android:text="*City"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"

                            />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="36dp"

                            android:layout_gravity="center"

                            android:layout_marginLeft="20dp"
                            android:background="@drawable/estimate_round"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="100dp"
                            android:text="*Region / State"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"

                            />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="36dp"

                            android:layout_gravity="center"

                            android:layout_marginLeft="20dp"
                            android:background="@drawable/estimate_round"/>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:text="Default Address"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"

                        />

                <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/rg_news"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:text="Yes"
                            android:id="@+id/rb_yes"
                            android:checked="true"
                            android:buttonTint="@color/black_color"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#1e1010" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:id="@+id/rb_no"
                            android:buttonTint="@color/black_color"
                            android:textColor="#1e1010"
                            android:paddingLeft="5dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            />
                    </RadioGroup>
                </LinearLayout>


                </LinearLayout>




            </android.support.v7.widget.CardView>







        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <Button
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="Add"
        android:textColor="#fff"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:background="@drawable/continue_btn"
        android:layout_alignParentBottom="true"
        android:layout_height="45dp" />


    </RelativeLayout>