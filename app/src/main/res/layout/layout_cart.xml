<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="#ececec"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_cart"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"



        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"

            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginBottom="100dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    card_view:cardUseCompatPadding="false"



                    app:cardCornerRadius="0dp"

                    card_view:cardPreventCornerOverlap="false"


                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:background="@color/coupon_bg"
                        android:id="@+id/rv_cart"
                        android:padding="10dp"
                        android:layout_height="wrap_content">


                    </android.support.v7.widget.RecyclerView>
                </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/coupon_round2"

                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                      <LinearLayout
                        android:id="@+id/rl_deals"



                        android:layout_width="match_parent"
                        android:background="@drawable/coupon_round"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tv_deals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/btnMoreDeals"
                            android:text="Use Coupon Code"
                            android:textColor="#00072b"


                            android:layout_marginLeft="10dp"/>



                    </LinearLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                               android:layout_marginTop="30dp"
                                android:layout_marginBottom="30dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/type_coupon_round"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:paddingRight="15dp"
                                    android:paddingLeft="15dp"
                                    android:background="@android:color/transparent"
                                    android:textColor="#a8999f"
                                    android:textColorHint="#a8999f"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:hint="Enter your coupon here"/>

                           <Button
                               android:layout_width="105dp"
                               android:text="Apply"
                               android:textColor="#000c0c"
                               android:textAppearance="@style/TextAppearance.AppCompat.Small"
                               android:background="@drawable/coupon_btn"

                               android:layout_alignParentRight="true"
                               android:layout_height="match_parent" />

                            </RelativeLayout>



                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/coupon_round2"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout




                                android:layout_width="match_parent"
                                android:background="@drawable/coupon_round"
                                android:layout_height="wrap_content"
                                android:padding="8dp">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/btnMoreDeals"
                                    android:text="Estimate Shipping &amp; Taxes"
                                    android:textColor="#00072b"


                                    android:layout_marginLeft="10dp"/>



                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enter your destination to get a shipping estimate."
                                android:layout_margin="20dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="#000"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="100dp"
                                    android:text="*Country"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="#000"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content"

                                    />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:hint="India"
                                    android:layout_gravity="center"
                                    android:paddingLeft="20dp"
                                    android:textColor="#000"
                                    android:textColorHint="#000"
                                    android:paddingRight="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:background="@drawable/estimate_round"/>



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                               android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="100dp"
                                    android:ellipsize="end"
                                    android:layout_gravity="center"


                                    android:text="*Region / State"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="#000"
                                    android:textStyle="bold"

                                    android:layout_height="wrap_content"

                                    />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:text=""
                                    android:layout_gravity="center"
                                    android:paddingLeft="20dp"
                                    android:textColor="#000"
                                    android:textColorHint="#000"
                                    android:paddingRight="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:background="@drawable/estimate_round"/>



                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="100dp"
                                    android:text="*Post Code"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="#000"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content"

                                    />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:text=""
                                    android:paddingLeft="20dp"
                                    android:textColor="#000"
                                    android:inputType="number"
                                    android:textColorHint="#000"
                                    android:paddingRight="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:background="@drawable/estimate_round"/>



                            </LinearLayout>


                            <Button
                                android:layout_width="150dp"
                                android:layout_marginTop="30dp"
                                android:layout_gravity="center"
                                android:textColor="#000c0c"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:text="Get Quotes"
                                android:layout_marginBottom="30dp"
                                android:background="@drawable/coupon_btn"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/coupon_round2"
                            android:layout_marginTop="5dp"


                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout




                                android:layout_width="match_parent"
                                android:background="@drawable/coupon_round"
                                android:layout_height="wrap_content"
                                android:padding="8dp">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/btnMoreDeals"
                                    android:text="Use Gift Certificate"
                                    android:textColor="#00072b"


                                    android:layout_marginLeft="10dp"/>



                            </LinearLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="30dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/type_coupon_round"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:paddingRight="20dp"
                                    android:paddingLeft="20dp"
                                    android:background="@android:color/transparent"
                                    android:textColor="#a8999f"
                                    android:textColorHint="#a8999f"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:hint="Enter your gift certificate code here"/>

                                <Button
                                    android:layout_width="80dp"
                                    android:text="Apply"
                                    android:textColor="#000c0c"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:background="@drawable/coupon_btn"

                                    android:layout_alignParentRight="true"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>



                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"

                           android:gravity="center"

                           android:background="@drawable/sub_total_round"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="100dp"
                                android:text="Sub-Total"
                                android:id="@+id/tv_sub"
                                android:gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                                android:textColor="#191919"
                                android:layout_height="wrap_content" />

                            <View

                                android:layout_width="0.5dp"


                                android:layout_centerInParent="true"
                                android:layout_height="match_parent"

                                android:layout_centerHorizontal="true"


                                android:background="#000" />

                            <TextView
                                android:id="@+id/tv_sub_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"


                                android:layout_centerVertical="true"
                                android:gravity="center"

                                android:text="@string/Rs1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#191919" />



                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"


                            android:gravity="center"

                            android:background="#e4e4e4"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="100dp"
                                android:text="Total"
                                android:id="@+id/tv_sub1"
                                android:gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                                android:textColor="#191919"
                                android:layout_height="wrap_content" />

                            <View

                                android:layout_width="0.5dp"

                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"


                                android:background="#000" />

                            <TextView
                                android:id="@+id/tv_sub_text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"

                                android:layout_marginRight="20dp"

                                android:layout_centerVertical="true"
                                android:gravity="center"

                                android:text="@string/Rs1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#191919" />



                        </RelativeLayout>


                    </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:weightSum="2"
        android:layout_centerInParent="true"

        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="100dp"
            android:layout_weight="1"
            android:background="@drawable/continue_btn"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:layout_width="wrap_content"




                android:textAlignment="center"
                android:background="@android:color/transparent"

                android:textColor="#fff"
                android:gravity="center"

                android:text="Continue Shopping"

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="45dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/coupon_btn"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:layout_width="wrap_content"




                android:textAlignment="center"
                android:background="@android:color/transparent"

                android:textColor="#fff"
                android:gravity="center"

                android:text="CheckOut"

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="45dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>