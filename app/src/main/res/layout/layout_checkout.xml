<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="#ececec"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_checkout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nsv_cart"
        android:scrollbars="none"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"



        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/coupon_round2"

            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/coupon_round"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <TextView
                android:id="@+id/tv_deals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btnMoreDeals"
                android:text="Billing Details"
                android:textColor="#00072b"
                android:layout_marginLeft="10dp"/>




        </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="50dp"
                    android:padding="5dp"
                    android:id="@+id/tv_billing_address"
                    android:text="Addddsfsfs"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:textColor="#000"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />



                <TextView
                    android:layout_width="wrap_content"
                    android:text="Change"
                    android:id="@+id/tv_change_billing"
                    android:layout_marginRight="13dp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/coupon_round2"
                android:visibility="gone"
                android:id="@+id/ll_delivery_details"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="@drawable/coupon_round"
                    android:layout_height="wrap_content"
                    android:padding="8dp">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/btnMoreDeals"
                        android:text="Delivery Details"
                        android:textColor="#00072b"
                        android:layout_marginLeft="10dp"/>




                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="70dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="50dp"
                        android:padding="5dp"
                        android:id="@+id/tv_delivery_address"
                        android:text="Addddsfsfs"
                        android:layout_alignParentLeft="true"
                        android:maxLines="2"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:textColor="#000"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:ellipsize="end"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Change"
                        android:id="@+id/tv_change_delivery"
                        android:layout_marginRight="13dp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content" />


                </RelativeLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/coupon_round2"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:id="@+id/ll_shipping"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/coupon_round"
                android:layout_height="wrap_content"
                android:padding="8dp">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/btnMoreDeals"
                    android:text="Shipping Method"
                    android:textColor="#00072b"


                    android:layout_marginLeft="10dp"/>




            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/rg_shipping_type"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:textSize="15dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text=""

                        android:id="@+id/rb_ship1"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:layout_height="wrap_content"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:id="@+id/rb_ship2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        />

                </RadioGroup>



            </RelativeLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/coupon_round2"
                android:layout_marginTop="5dp"
                android:id="@+id/ll_payment_method"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="@drawable/coupon_round"
                    android:layout_height="wrap_content"
                    android:padding="8dp">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/btnMoreDeals"
                        android:text="Payment Method"
                        android:textColor="#00072b"


                        android:layout_marginLeft="10dp"/>




                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                  <RadioGroup
                      android:layout_width="match_parent"
                      android:layout_margin="10dp"
                      android:id="@+id/rg_payment_type"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <RadioButton
                          android:layout_width="wrap_content"
                          android:textSize="15dp"
                          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                          android:text="Online (PayUmoney)"
                          android:checked="true"
                          android:visibility="gone"
                          android:id="@+id/rb_online"
                          android:buttonTint="@color/colorPrimaryDark"
                          android:layout_height="wrap_content"
                          />
                      <RadioButton
                          android:layout_width="wrap_content"
                          android:layout_marginTop="5dp"
                          android:text="COD"
                          android:checked="true"
                          android:id="@+id/rb_cod"
                          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                          android:buttonTint="@color/colorPrimaryDark"
                          android:textSize="15dp"
                          android:layout_height="wrap_content"
                          />

                  </RadioGroup>



                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#028277"
                    android:layout_height="0.8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:padding="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="Add Comments About Your Order"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Enter comments(optional)"
                        android:padding="15dp"
                        android:gravity="top"
                        android:focusable="false"
                        android:paddingLeft="20dp"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:inputType="text"
                        android:textColorHint="#000"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:paddingRight="20dp"

                        android:background="@drawable/estimate_round"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black_color"
                        android:text="I have read and agree to the"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textSize="10dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorAccent"
                        android:text="@string/returns_text"
                        android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="70dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:id="@+id/rl_shipping"
                        android:visibility="gone"
                        android:gravity="center"

                        android:background="#fff"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="120dp"
                            android:text="COD"
                            android:id="@+id/tv_shipping_title"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                            android:textColor="#191919"
                            android:layout_height="wrap_content" />

                        <View

                            android:layout_width="0.5dp"

                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"


                            android:background="#000" />

                        <TextView
                            android:id="@+id/tv_shipping_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"

                            android:layout_marginRight="20dp"

                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:text="@string/Rs1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#191919" />



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"


                        android:gravity="center"

                        android:background="#e4e4e4"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="120dp"
                            android:text="Total GST"

                            android:gravity="center"
                            android:textSize="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                            android:textColor="#191919"
                            android:layout_height="wrap_content" />

                        <View

                            android:layout_width="0.5dp"

                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"


                            android:background="#000" />

                        <TextView
                            android:id="@+id/tv_total_gst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"

                            android:layout_marginRight="20dp"
                            android:textSize="16dp"
                            android:layout_centerVertical="true"
                            android:gravity="center"

                            android:text="@string/Rs1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#191919" />



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"


                        android:gravity="center"

                        android:background="@drawable/sub_total_round"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="120dp"
                            android:textSize="16dp"
                            android:text="Sub-Total"
                            android:id="@+id/tv_sub"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                            android:textColor="#191919"
                            android:layout_height="wrap_content" />

                        <View

                            android:layout_width="0.5dp"


                            android:layout_centerInParent="true"
                            android:layout_height="match_parent"

                            android:layout_centerHorizontal="true"


                            android:background="#000" />

                        <TextView
                            android:id="@+id/tv_sub_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"


                            android:textSize="16dp"
                            android:layout_centerVertical="true"
                            android:gravity="center"

                            android:text="@string/Rs1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#191919" />



                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"


                        android:gravity="center"

                        android:background="#e4e4e4"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="120dp"
                            android:textSize="16dp"
                            android:text="Total"
                            android:id="@+id/tv_sub1"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                            android:textColor="#191919"
                            android:layout_height="wrap_content" />

                        <View

                            android:layout_width="0.5dp"

                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"


                            android:background="#000" />

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"

                            android:layout_marginRight="20dp"

                            android:textSize="16dp"
                            android:layout_centerVertical="true"
                            android:gravity="center"

                            android:text="@string/Rs1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#191919" />



                    </RelativeLayout>

                </LinearLayout>










        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Confirm Order"
        android:id="@+id/btn_confirm"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#fff"
        android:background="@drawable/coupon_btn"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>